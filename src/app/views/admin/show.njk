{%extends "./layout.njk" %}

{% block content %}

  <section class="detailed list">

    <div class="recipe">
      <div class="top">
        <h1>Receita:
          {{recipe.title}}
        </h1>
        <a class="button" href="/admin/{{recipe.id}}/edit">Editar receita</a>
      </div>

      <img src="{{recipe.image}}" alt="Imagem de {{recipe.title}}"/>
      <p class="title">{{recipe.title}}</p>
      <p class="chef">por
        {{recipe.chef}}</p>
    </div>

  </section>

  <section class="main">

    <div class="style">
      <div>
        <h2>Ingredientes</h2>
        <a id="hide">ESCONDER</a>
        <ul id="lista0">
          {% for i in recipe.ingredients %}
            <li>{{i}}</li>
          {% endfor %}
        </ul>
      </div>

    </div>

    <div class="style">
      <div>
        <h2>Modo de preparo</h2>
        <a id="hide">ESCONDER</a>
        <ul id="lista1">
          {% for i in recipe.preparation %}
            <li class="preparation">{{i}}</li>
          {% endfor %}
        </ul>
      </div>

    </div>

    <div class="style">
      <div>
        <h2>Informações adicionais</h2>
        <a id="hide">ESCONDER</a>
        <p id="lista2">{{recipe.information}}</p>
      </div>

    </div>
  </section>

{% endblock %}