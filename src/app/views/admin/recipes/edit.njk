{% extends "./layout.njk" %}

{% block content %}

  <div class="details">

    <form id="form-delete" method="POST" action="/admin/recipes?_method=DELETE">
      <button class="delete" type="submit">Deletar</button>

      <input type="hidden" name="id" value="{{recipe.id}}">
    </form>

    <form method="POST" action="/admin/recipes?_method=PUT">
      <div class="heading">
        <h1>Editar receita</h1>
        <button class="save" type="submit">Salvar receita</button>
      </div>

      {% include "admin/recipes/fields.njk" %}

      <input type="hidden" name="id" value="{{recipe.id}}">
    </form>
  </div>

{% endblock content %}