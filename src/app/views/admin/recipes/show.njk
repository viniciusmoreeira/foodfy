{%extends "./layout.njk" %}

{% block content %}

  <section class="recipe_profile">

    <div class="recipe">
      <div class="page_title">
        <h1>Receita:
          {{recipe.title}}
        </h1>
        <a class="button" href="/admin/recipes/{{recipe.id}}/edit">Editar receita</a>
      </div>

      <img src="{{recipe.image}}" alt="Imagem de {{recipe.title}}"/>
      <h2>{{recipe.title}}</h2>
      <p>por
        {{recipe.chef_name}}</p>
    </div>

  </section>

  <section class="recipe_info">

    <div>
      <h2>Ingredientes</h2>
      <a id="hide">ESCONDER</a>
      <ul id="lista0">
        {% for i in recipe.ingredients %}
          <li>{{i}}</li>
        {% endfor %}
      </ul>
    </div>

    <div>
      <h2>Modo de preparo</h2>
      <a id="hide">ESCONDER</a>
      <ul id="lista1">
        {% for i in recipe.preparation %}
          <li>{{i}}</li>
        {% endfor %}
      </ul>
    </div>

    <div>
      <h2>Informações adicionais</h2>
      <a id="hide">ESCONDER</a>
      <p id="lista2">{{recipe.information}}</p>
    </div>

  </section>

{% endblock %}