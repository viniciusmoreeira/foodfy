{%extends "../recipes/layout.njk" %}

{% block content %}

  <section class="chef_profile">

    <div class="chef">
      <div class="page_title">
        <h1>Chef:
          {{chef.name}}
        </h1>
        <a class="button" href="/admin/chefs/{{chef.id}}/edit">Editar Chef</a>
      </div>

      <img src="{{chef.image}}" alt="Imagem de {{chef.name}}"/>
      <h2>{{chef.name}}</h2>
      <p>{{chef.total_recipes}}2 receitas</p>
    </div>

  </section>

  <section>
    <div class="chef_recipes">
      <div>
        <h2>Receitas</h2>
        <ul>
          {% for i in chef.total_recipes %}
            <li>{{i}}</li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </section>

{% endblock %}